# Caddyfile for Trade Compliance API
# Reverse proxy configuration with automatic TLS

# Main API endpoint
api.localhost {
    reverse_proxy api:8000
    log {
        output file /var/log/caddy/api.log
        format json
    }
}

# Prometheus monitoring
prometheus.localhost {
    reverse_proxy prometheus:9090
}

# Grafana dashboard
grafana.localhost {
    reverse_proxy grafana:3000
}

# Health check endpoint
health.localhost {
    reverse_proxy api:8000
}

